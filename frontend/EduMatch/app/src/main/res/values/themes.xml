<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Base.Theme.EduMatch"
		parent="Theme.Material3.DayNight.NoActionBar">
		<!-- Customize your light theme here. -->
		<!-- <item name="colorPrimary">@color/my_light_primary</item> -->
	</style>

	<style name="Theme.EduMatch"
		parent="Base.Theme.EduMatch" />
	<style name="title">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000000</item>
	</style>
	<style name="label_text">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#000000</item>
	</style>
	<style name="black_button_text">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000000</item>
	</style>
	<style name="white_button_text">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="DayOfTheWeekButtonStyle">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:background">@drawable/day_button_ellipse</item>
		<item name="android:textAppearance">@style/black_button_text</item>
	</style>
	<style name="WhiteButton">
		<item name="android:layout_width">147.5dp</item>
		<item name="android:layout_height">42dp</item>
		<item name="android:background">@drawable/white_button</item>
		<item name="android:textAppearance">@style/black_button_text</item>
	</style>
	<style name="BlackButton">
		<item name="android:layout_width">147.5dp</item>
		<item name="android:layout_height">42dp</item>
		<item name="android:background">@drawable/black_button</item>
		<item name="android:textAppearance">@style/white_button_text</item>
	</style>
	<style name="AddressAutoComplete">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_marginEnd">12dp</item>
		<item name="android:layout_marginStart">12dp</item>
		<item name="android:layout_marginTop">12dp</item>
		<item name="android:background">@drawable/input_container</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="GridLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">100dp</item>
		<item name="android:paddingBottom">100dp</item>
		<item name="android:layout_marginLeft">24dp</item>
		<item name="android:layout_marginRight">24dp</item>
		<item name="android:layout_gravity">center</item>
	</style>



</resources>