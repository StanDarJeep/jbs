<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/tutor_or_tutee"
	style="@style/GridLayout"
	app:columnCount="1"
	app:rowCount="2">

	<TextView
		android:id="@+id/tutor_or_tutee_display"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/tutor_or_tutee"
		android:textAppearance="@style/title"
		android:textStyle="bold"
		app:layout_rowWeight="1" />

	<androidx.gridlayout.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		app:columnCount="2"
		app:rowCount="1">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/tutor_button"
			style="@style/WhiteButton"
			android:layout_marginRight="8dp"
			android:text="@string/tutor"
			app:layout_columnWeight="1" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/tutee_button"
			style="@style/WhiteButton"
			android:layout_marginRight="12dp"
			android:text="@string/tutee"
			app:layout_columnWeight="1" />
	</androidx.gridlayout.widget.GridLayout>
</androidx.gridlayout.widget.GridLayout>